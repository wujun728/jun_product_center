.container {
  margin-bottom: 12rpx;
  position: relative;
}
.container .tab {
  position: fixed;
  top: 0rpx;
  z-index: 2;
  width: 100%;
}
.container .goods_content {
  margin-top: 112rpx;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.container .goods_content .good_item {
  width: 50%;
  padding: 0rpx 40rpx;
}
.container .goods_content .good_item .good_item_title .title_img {
  width: 100%;
}
.container .goods_content .good_item .good_item_title .title_detail .ename,
.container .goods_content .good_item .good_item_title .title_detail .name,
.container .goods_content .good_item .good_item_title .title_detail .detail {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  color: black;
}
.container .goods_content .good_item .good_item_title .title_detail .ename {
  font-weight: bold;
}
.container .goods_content .good_item .good_item_title .title_detail .name {
  font-size: 24rpx;
}
.container .goods_content .good_item .good_item_title .title_detail .detail {
  font-size: 16rpx;
  color: #969696;
}
.container .goods_content .good_item .good_item_bottom {
  margin-top: 24rpx;
}
.container .goods_content .good_item .good_item_bottom .bottom_detail {
  float: left;
  line-height: 30rpx;
}
.container .goods_content .good_item .good_item_bottom .bottom_detail .price {
  display: block;
}
.container .goods_content .good_item .good_item_bottom .bottom_detail .spec {
  color: #969696;
  font-size: 16rpx;
}
.container .goods_content .good_item .good_item_bottom .add {
  float: right;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgba(150, 150, 150, 0.2);
}
.container .goods_content .good_item .good_item_bottom .add ::after {
  content: "";
  display: block;
  clear: both;
}
.container .goods_content_active1 .good_item {
  width: 100%;
  position: relative;
}
.container .goods_content_active1 .good_item .good_item_title .title_img {
  width: 100%;
  box-shadow: 3px 3px 10px 0px gray;
  border-radius: 8px;
}
.container .goods_content_active1 .good_item .good_item_title .title_detail .ename,
.container .goods_content_active1 .good_item .good_item_title .title_detail .name {
  line-height: 60rpx;
}
.container .goods_content_active1 .good_item_bottom {
  position: absolute;
  bottom: 0px;
  right: 40rpx;
}
.container .goods_content_active1 .good_item_bottom .bottom_detail {
  float: none !important;
}
.container .goods_content_active1 .good_item_bottom .bottom_detail .price {
  display: none !important;
}
.container .goods_content_active1 .good_item_bottom .bottom_detail .spec {
  margin-bottom: 12rpx;
  display: block;
}
.container .empty_bar {
  text-align: center;
  line-height: 100rpx;
  line-height: 100rpx;
  width: 100%;
}
.container .goods_empty {
  margin-top: 24rpx;
  width: 100%;
}

