.container {
  letter-spacing: 12rpx;
}
.container .new {
  line-height: 48rpx;
  padding-left: 20rpx;
}
.container .new_content {
  width: 100%;
}
.container .new_content .new_item.ahover {
  opacity: 0.8;
}
.container .new_content .new_item {
  margin-bottom: 60rpx;
}
.container .new_content .new_item .cover {
  position: relative;
}
.container .new_content .new_item .cover .bgImg {
  width: 100%;
  height: 400rpx;
}
.container .new_content .new_item .cover .video {
  position: absolute;
  top: 40%;
  left: 45%;
  width: 96rpx;
  height: 96rpx;
}
.container .new_content .new_item .texts {
  padding-left: 20rpx;
}
.container .new_content .new_item .texts .name {
  line-height: 50rpx;
  font-weight: bold;
  color: #323232;
}
.container .new_content .new_item .texts .title {
  font-size: 24rpx;
  letter-spacing: 1rpx;
  color: #939393;
}

