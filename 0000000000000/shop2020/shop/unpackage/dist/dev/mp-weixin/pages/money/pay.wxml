<view class="app"><view class="price-box"><text>支付金额</text><text class="price">{{orderInfo.price}}</text></view><view class="pay-type-list"><block wx:for="{{payments}}" wx:for-item="item" wx:for-index="index" wx:key="type"><view data-event-opts="{{[['tap',[['changePayType',[index]]]]]}}" class="type-item b-b" bindtap="__e"><block wx:if="{{item.type=='wx'||item.type=='wechat'}}"><text class="icon yticon icon-weixinzhifu"></text></block><block wx:if="{{item.type=='alipay'}}"><text class="icon yticon icon-alipay"></text></block><block wx:if="{{item.type=='yue'}}"><text class="icon yticon icon-erjiye-yucunkuan"></text></block><view class="con"><text class="tit">{{item.name}}</text><text>{{item.remark}}</text><block wx:if="{{item.type=='yue'}}"><text>{{"可用余额 ¥"+account.account}}</text></block></view><block wx:if="{{!(item.type=='yue'&&account.account<orderInfo.price)}}"><label class="radio"><radio value="" color="#fa436a" checked="{{payType==item}}"></radio></label></block><block wx:if="{{item.type=='yue'&&account.account<orderInfo.price}}"><label class="radio">余额不足</label></block></view></block></view><text data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="mix-btn" bindtap="__e">确认支付</text></view>