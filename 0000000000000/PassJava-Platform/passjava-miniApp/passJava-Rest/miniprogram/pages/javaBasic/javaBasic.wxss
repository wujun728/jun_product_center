.topic {
  width: 700rpx;
  margin: 0 auto;
}
.topic .topic-item {
  margin: 10rpx auto;
  box-shadow:2px 2px 10px rgba(120, 228, 223, 0.26);
}
.topic .topic-item .topic-title {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #0fb6e94d;
  display: flex;
  border-top-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}
.topic .topic-item .topic-title .title-text {
  width: 630rpx;
  height: 60rpx;
  padding-left: 20rpx;
}
.topic .topic-item .topic-title .title-toggle {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
}
.topic .topic-item .topic-title .title-toggle image {
  width: 45rpx;
  height: 45rpx;
  margin-top: 8rpx;
}
.topic .topic-item .detail {
  margin-top: -30rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 45rpx;
  text-indent: 2em;
}

image {
  width: 100%;
  height: 320rpx;
}