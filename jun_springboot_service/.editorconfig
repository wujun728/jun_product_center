# EditorConfig is awesome: https://EditorConfig.org

# 表示是最顶层的 EditorConfig 配置文件
root = true

# 表示所有文件适用
[*]
# 设置文件字符集为 utf-8
charset = utf-8
# 缩进风格，tab 或者 space
indent_style = space
# 缩进大小
indent_size = 4
# 控制换行类型(lf、cr、crlf)
end_of_line = lf
# 去除行尾的任意空白字符
trim_trailing_whitespace = true
# 文件末尾添加换行
insert_final_newline = true

# 表示仅 md 文件适用以下规则
[*.md]
trim_trailing_whitespace = false

# Java相关文件
[*.java]
indent_size = 4

# XML相关文件
[*.xml]
indent_size = 4

# YAML配置文件
[*.yml]
indent_size = 2

# properties配置文件
[*.properties]
charset = utf-8

# JavaScript相关文件
[*.{js,jsx,ts,tsx}]
indent_size = 2