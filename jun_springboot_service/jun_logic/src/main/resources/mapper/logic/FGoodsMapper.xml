<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.logic.mapper.FGoodsMapper">

    <resultMap type="FGoods" id="FGoodsResult">
        <result property="id" column="id"/>
        <result property="goodsName" column="goods_name"/>
        <result property="goodsType" column="goods_type"/>
        <result property="goodsPrice" column="goods_price"/>
        <result property="goodsInventory" column="goods_inventory"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="createName" column="create_name"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateName" column="update_name"/>
        <result property="delFlag" column="del_flag"/>
        <result property="imgUrl" column="img_url"/>
    </resultMap>

    <sql id="selectFGoodsVo">
        select id,
               goods_name,
               goods_type,
               goods_price,
               goods_inventory,
               create_time,
               create_by,
               create_name,
               update_time,
               update_by,
               update_name,
               del_flag,
               img_url
        from f_goods
    </sql>

    <select id="selectFGoodsList" parameterType="FGoods" resultMap="FGoodsResult">
        <include refid="selectFGoodsVo"/>
        <where>
            del_flag = "0"
            <if test="goodsName != null  and goodsName != ''">and goods_name like concat('%', #{goodsName}, '%')</if>
            <if test="goodsType != null  and goodsType != ''">and goods_type = #{goodsType}</if>
            <if test="goodsPrice != null  and goodsPrice != ''">and goods_price = #{goodsPrice}</if>
            <if test="goodsInventory != null  and goodsInventory != ''">and goods_inventory = #{goodsInventory}</if>
            <if test="createName != null  and createName != ''">and create_name like concat('%', #{createName}, '%')
            </if>
            <if test="updateName != null  and updateName != ''">and update_name like concat('%', #{updateName}, '%')
            </if>
            <if test="imgUrl != null  and imgUrl != ''">and img_url = #{imgUrl}</if>
        </where>
    </select>

    <select id="selectFGoodsById" parameterType="String" resultMap="FGoodsResult">
        <include refid="selectFGoodsVo"/>
        where id = #{id}
    </select>

    <insert id="insertFGoods" parameterType="FGoods">
        insert into f_goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="goodsName != null and goodsName != ''">goods_name,</if>
            <if test="goodsType != null and goodsType != ''">goods_type,</if>
            <if test="goodsPrice != null and goodsPrice != ''">goods_price,</if>
            <if test="goodsInventory != null and goodsInventory != ''">goods_inventory,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createName != null and createName != ''">create_name,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateName != null and updateName != ''">update_name,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="imgUrl != null">img_url,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="goodsName != null and goodsName != ''">#{goodsName},</if>
            <if test="goodsType != null and goodsType != ''">#{goodsType},</if>
            <if test="goodsPrice != null and goodsPrice != ''">#{goodsPrice},</if>
            <if test="goodsInventory != null and goodsInventory != ''">#{goodsInventory},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createName != null and createName != ''">#{createName},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateName != null and updateName != ''">#{updateName},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="imgUrl != null">#{imgUrl},</if>
        </trim>
    </insert>

    <update id="updateFGoods" parameterType="FGoods">
        update f_goods
        <trim prefix="SET" suffixOverrides=",">
            <if test="goodsName != null and goodsName != ''">goods_name = #{goodsName},</if>
            <if test="goodsType != null and goodsType != ''">goods_type = #{goodsType},</if>
            <if test="goodsPrice != null and goodsPrice != ''">goods_price = #{goodsPrice},</if>
            <if test="goodsInventory != null and goodsInventory != ''">goods_inventory = #{goodsInventory},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createName != null and createName != ''">create_name = #{createName},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateName != null and updateName != ''">update_name = #{updateName},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="imgUrl != null">img_url = #{imgUrl},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFGoodsById" parameterType="String">
        update f_goods
        set del_flag = 2
        where id = #{id}
    </delete>

    <delete id="deleteFGoodsByIds" parameterType="String">
        update f_goods set del_flag = 2 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>